  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Launch Backend",
      "type": "node",
      "program": "${workspaceFolder}/backend/src/app.ts",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "C:\\ProgramData\\chocolatey\\bin\\deno.EXE",
      "runtimeArgs": [
        "run",
        "--no-check=remote",
        "--inspect",
        "--allow-read=.",
        "--allow-net",
        "--allow-env",
        "--allow-write",
        "--allow-run",
      ],
      "attachSimplePort": 9229
    }
  ]
}