{
  "importMap": "../import_map.json",
  "tasks": {
    "start": "deno run     --no-check=remote --allow-read=. --allow-net=localhost --allow-env --watch src/app.ts",
    "build": "deno compile --no-check=remote --allow-read=. --allow-net=localhost --allow-env -o dist/jimmi src/app.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno test --no-check=remote --allow-all",
    "test:cov": "deno task test -- --coverage=coverage_results",
    "cov": "deno coverage coverage_results",
    "cov:report": "deno task cov -- --lcov --output=coverage_report.lcov",
    "cov:full": "deno task test:cov ; deno task cov:report"
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "src/",
        "tests/"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
