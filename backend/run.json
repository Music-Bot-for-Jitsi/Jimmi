{
  "scripts": {
    "start": "deno run     --config deno.json --import-map=../import_map.json --no-check --allow-read --allow-net --watch src/app.ts",
    "build": "deno compile --config deno.json --import-map=../import_map.json --no-check --allow-read --allow-net -o dist/jimmi src/app.ts",
    "lint": "deno lint     --config deno.json",
    "fmt": "deno fmt       --config deno.json",
    "test": "deno test     --config deno.json --import-map=../import_map.json --no-check --allow-all --coverage=coverage_results",
    "cov": "deno coverage coverage_results",
    "report": "deno coverage coverage_results --lcov --output=coverage_report.lcov"
  },
  "files": [
    "./src"
  ]
}
